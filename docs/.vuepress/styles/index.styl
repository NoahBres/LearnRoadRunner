// Overriding default vue styles //

blockquote
  color theme('colors.gray.500')

.action-link a, .action-button
  background $accentColor
  padding 1em 1.2em

  border-radius 0.2em
  border none
  border-bottom 0.1em solid darken($accentColor, 30%)

  color #fff
  font-size 1.2em

  transition background-color 100ms ease, transform 100ms ease

.action-button:hover, .action-link a:hover
  background-color lighten($accentColor, 10%)
  text-decoration none

  cursor pointer

.action-button:focus, .action-link a:focus
  border-bottom 0.1em solid transparent
  transform translateY(0.1em)

// https://github.com/vuejs/vuepress/blob/master/packages/%40vuepress/theme-default/styles/custom-blocks.styl
.custom-block
  &.warning
    // background-color theme("colors.yellow.100")
    border-color theme("colors.yellow.300")
    color theme("colors.yellow.700")
    
    .custom-block-title
      color theme("colors.yellow.500")

  &.tip
    border-color theme("colors.green.400")

  &.danger
    background-color theme('colors.red.100')
    border-color theme("colors.red.500")
    color theme("colors.red.900")

    .custom-block-title
      color theme("colors.red.700")

.theme-default-content code
  color theme('colors.blue.900')
  background-color: theme('colors.blue.200')

